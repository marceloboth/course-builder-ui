<div class="card course">
  <div class="card-image">
  </div>
  <div class="card-header">
    <h4 class="card-title course-name">{{course.name}}</h4>
    <h6 class="card-subtitle">{{course.subtitle}}</h6>
  </div>
  <div class="card-body">
    <p>Price: $ {{course.price}}</p>
    <p>Duration of {{course.duration}} hours</p>
    <p class="total-of-chapters">Number of chapters: {{course.chapters.length}}</p>
  </div>
  <div class="card-footer">
    {{link-to 'Edit' 'main.courses.course.edit' course class="btn btn-primary btn-course-update"}}
    {{link-to 'Add Chapter' 'main.courses.course.chapters.new' course class="btn btn-default btn-course-chapter"}}
  </div>
</div>
